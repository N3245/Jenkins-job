<script>
angular.module('formApp', []).controller('FormController', function ($scope) {
  $scope.activeTab = 'journal'; // Default active tab

  $scope.setActiveTab = function (tabName) {
    $scope.activeTab = tabName; // Set the active tab
  };
});
</script>
